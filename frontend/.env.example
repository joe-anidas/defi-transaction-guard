# DeFi Transaction Guard Frontend Environment Variables

# API Configuration
# Backend API URL (adjust if backend runs on different port)
VITE_API_URL=http://localhost:8000
VITE_API_TIMEOUT=10000

# Blockchain Configuration
# RPC URL for blockchain connection
VITE_BLOCKCHAIN_RPC_URL=http://127.0.0.1:8545
VITE_CHAIN_ID=31337

# Contract Addresses (Auto-populated after deployment)
# These are set automatically by the deployment script
# VITE_TRANSACTION_GUARD_ADDRESS=0x...
# VITE_BDAG_TOKEN_ADDRESS=0x...
# VITE_PROTECTED_DEX_ADDRESS=0x...

# Feature Flags
VITE_ENABLE_DEMO_MODE=true
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_ANALYTICS=false

# UI Configuration
VITE_APP_NAME="DeFi Transaction Guard"
VITE_APP_VERSION=1.0.0
VITE_THEME=dark

# External Services (Optional)
# VITE_ANALYTICS_ID=your_analytics_id
# VITE_SENTRY_DSN=your_sentry_dsn

# Development Configuration
VITE_DEBUG_MODE=false
VITE_MOCK_WALLET=false

# Network Configuration for Production
# VITE_BLOCKDAG_RPC_URL=https://rpc-testnet.blockdag.network
# VITE_BLOCKDAG_CHAIN_ID=12345

# MetaMask Configuration
VITE_WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id