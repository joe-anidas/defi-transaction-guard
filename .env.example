# DeFi Transaction Guard - Project Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# GLOBAL PROJECT CONFIGURATION
# =============================================================================

# Project Information
PROJECT_NAME="DeFi Transaction Guard"
PROJECT_VERSION=1.0.0
ENVIRONMENT=development

# =============================================================================
# AI API KEYS (Optional - System works with simulated AI)
# =============================================================================

# Groq API Keys (Get from: https://console.groq.com/)
GROQ_API=gsk_your_groq_api_key_here
GROQ_API_2=gsk_backup_groq_key_here

# Gemini API Keys (Get from: https://makersuite.google.com/app/apikey)
GEMINI_API=your_gemini_api_key_here
GEMINI_API_2=backup_gemini_key_here

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Private Key for Deployments (Use test key for development)
PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# RPC URLs
BLOCKCHAIN_RPC_URL=http://127.0.0.1:8545
BLOCKDAG_RPC_URL=https://rpc-testnet.blockdag.network
POLYGON_RPC_URL=https://rpc-mumbai.maticvigil.com

# API Keys for Contract Verification
POLYGONSCAN_API_KEY=your_polygonscan_api_key
ETHERSCAN_API_KEY=your_etherscan_api_key

# =============================================================================
# SERVICE PORTS (Default values)
# =============================================================================

# Backend API Port
BACKEND_PORT=8000

# Frontend Development Port
FRONTEND_PORT=5173

# Blockchain Node Port
BLOCKCHAIN_PORT=8545

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================

# Infura/Alchemy for RPC access
INFURA_PROJECT_ID=your_infura_project_id
ALCHEMY_API_KEY=your_alchemy_api_key

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn
ANALYTICS_ID=your_analytics_id

# WalletConnect
WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Debug and Development Flags
DEBUG_MODE=true
ENABLE_DEMO_MODE=true
MOCK_AI_RESPONSES=true

# Logging
LOG_LEVEL=INFO

# =============================================================================
# SECURITY CONFIGURATION (Production)
# =============================================================================

# JWT Secret for API authentication
JWT_SECRET=your_jwt_secret_here

# CORS Origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60